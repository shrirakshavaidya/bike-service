<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="7dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="391dp"
            android:layout_height="109dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/jssate" />

        <Space
            android:layout_width="398dp"
            android:layout_height="68dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="372dp"
            android:layout_height="69dp"
            android:text="Department of Information Science And Engineering"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="127dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:src="@drawable/repairbike" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bike Service App By"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="397dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="391dp"
            android:layout_height="39dp"
            android:text="1JS20IS101 - Shriraksha Vaidya"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="393dp"
            android:layout_height="52dp"
            android:text="1JS20IS121 - Yamuna M R"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/start"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/background"
            android:text="START" />

    </LinearLayout>


</ScrollView>